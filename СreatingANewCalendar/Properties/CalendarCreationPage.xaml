<Page x:Class="СreatingANewCalendar.Properties.CalendarCreationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:СreatingANewCalendar.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CalendarCreationPage">

    <Grid Background="White">
        <Button x:Name="GoBackToTheMainPage" Click="GoBackToTheMainPageClick" Content="Вернуться на главную страницу" HorizontalAlignment="Left" Margin="51,278,0,0" VerticalAlignment="Top" Width="191" Cursor="Hand" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="51,25,0,0" TextWrapping="Wrap" Text="Создать календарь" VerticalAlignment="Top" FontSize="22"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="51,75,0,0" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top" Width="302" FontSize="16"/>
        <TextBox HorizontalAlignment="Left" Height="110" Margin="51,114,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top" Width="302" FontSize="16" TextChanged="TextBox_TextChanged_1"/>
        <Button x:Name="CreationCalendarButton" Content="Создать календарь" HorizontalAlignment="Left" Margin="51,247,0,0" VerticalAlignment="Top" Width="191" Height="26"/>

    </Grid>
</Page>
